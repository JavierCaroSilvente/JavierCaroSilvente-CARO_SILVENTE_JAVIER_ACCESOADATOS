<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="es.florida.hibernate">
<class name="Libro" table="libros">
<id name="idLibro" column="idLibro">
<generator class="increment"/>
</id>
<property name="titulo" type="string" column="titulo"/>
<property name="autor" type="string" column="autor"/>
<property name="añoPublicacion" type="string" column="añoPublicacion"/>
<property name="editorial" type="string" column="editorial"/>
<property name="numeroPaginas" type="string" column="numeroPaginas"/>
</class>
</hibernate-mapping>